<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yourTraining.View.mainPage"
             BackgroundColor="MidnightBlue">

    <ScrollView>
        <VerticalStackLayout
            Spacing="35"
            Padding="30"
            VerticalOptions="Center">

            <Border
                StrokeShape="RoundRectangle 70, 20, 20, 70"
                BackgroundColor="MediumBlue"
                Stroke="Transparent">

                <Image
                Source="logo03.png"
                HeightRequest="200"
                HorizontalOptions="Center"/>

            </Border>

            <Button 
                x:Name="btnEntrar"
                Text="ENTRAR"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="MediumBlue"
                Clicked="btnEntrar_Clicked"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>